<h1 class="h3 font-weight-bold mb-4">  {{ post.title   }}</h1>

					

					
                    			
{% if post.meta('app_download_another_href_1')|first %}
			
								
					<div class="bg-white border rounded shadow-sm py-2 px-3 mb-4">
						<table class="table table-borderless table-striped">
							<thead>
								<tr>
									<th>Filename</th>
									<th>Size</th>
									<th>Type</th>
								</tr>
							</thead>
							<tbody>


{% for i in range(1, 10) %}


{% set  another_download_title      = post.meta('app_download_another_Title_' ~ i)|first %}
{% set  another_download_href   = post.meta('app_download_another_href_' ~ i)|first %}
{% set  app_download_another_Size    = post.meta('app_download_another_Size_' ~ i)|first  %}
{% set  app_download_another_Type       = post.meta('app_download_another_Type_' ~ i)|first  %}


{% if another_download_href %}
										<tr>
										<td>
											<a class="h6 font-weight-semibold text-break mb-0" href="{{ current_url ~ "&select=" ~ i }}">
												{{ another_download_title }}											</a>
										</td>
										<td class="text-muted">{{ app_download_another_Size }}</td>
										<td class="text-muted">{{ app_download_another_Type }}</td>
									</tr>

{% endif %}

{% endfor %}


															</tbody>
						</table>
					</div>
{% endif %}
						
			
		
