{% if pagination.pagination.pages is not empty %}
    <nav class="nav-pagination">
        <ul class="pagination">
            {# Previous Page #}
            {% if  pagination.pagination.prev %}
                <li class="page-item">
                    <a class="page-link" href="{{  pagination.pagination.prev.link }}" aria-label="Previous">Previous</a>
                </li>
            {% endif %}

            {# Pagination Pages #}
            {% for page in pagination.pagination.pages %}
                <li class="page-item {% if page.current %}active{% endif %}">
                    {% if page.current %}
                        <span class="page-link">{{ page.title }}</span> {# Ensure you use page.number #}
                    {% else %}
                        <a class="page-link" href="{{ page.link }}">{{ page.title }}</a> {# Ensure you use page.number #}
                    {% endif %}
                </li>
            {% endfor %}

            {# Next Page #}
            {% if pagination.pagination.next %}
                <li class="page-item">
                    <a class="page-link" href="{{pagination.pagination.next.link }}" aria-label="Next">Next</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}