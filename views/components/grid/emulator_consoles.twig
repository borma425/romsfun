
<div id="content" class="site-content">

		{% if not is_front_page  %}

   <div class="bg-light py-2">
      <div class="container">
    <ul id="breadcrumb" class="breadcrumb">
        <li class="breadcrumb-item home"><a href="{{ site.link   }}" title="Home">Home</a></li>

        <li class="breadcrumb-item item-cat"><a href="{{ current_cpt_link }}">{{ current_cpt_type }}</a></li> 

                </ul>
      </div>
   </div>

		{% endif %}

   <main id="primary" class="content-area">
      <section class="py-4">
         <div class="container">

		{% if is_front_page  %}
<div class="d-flex align-items-center mb-4 justify-content-between">
<h2 class="h4 mb-0">emulator Consoles</h2>

<a class="btn btn-sm btn-primary small ml-3" href="{{ fn('CPT_Redirect_link','emulators').link }}">View All</a>
</div>
		{% else %}
            <h1 class="h3 font-weight-bold mb-4">List of Available Consoles</h1>
		{% endif %}


            <div class="row">
            {% set emulators_consoles_section_range = is_front_page ? 2 : site.theme.theme_mod('basic-emulators_consoles-callout-range') %}
            {% for i in 0..emulators_consoles_section_range - 1 %}
                {% set emulator_title = site.theme.theme_mod('basic-emulators_consoles-callout-title-' ~ i) %}
{% if emulator_title %}

                {% set emulator_image = get_image(site.theme.theme_mod('basic-emulators_consoles-callout-background-' ~ i)).src | default(defaultimg) %}
                {% set tag_index = site.theme.theme_mod('basic-emulators_consoles-callout-tag-' ~ i) %}
                {% set tag_name = fn('get_tag_name_with_index', tag_index) %}
                {% set tag_path = site.link ~ "/see/" ~ current_cpt_type ~"/"~  tag_name %}
               <div class="col-6 col-md-4 col-lg-3 mb-4">
                  <a class="text-center bg-white border rounded shadow-sm d-flex flex-column h-100 p-3" href="{{ tag_path }}">
                     <span class="d-block my-auto">
                     <img style="max-height: 5rem;" loading="lazy" src="{{ emulator_image }}" alt=" {{emulator_title}}">
                     </span>
                     <h3 class="h6 font-weight-bold text-body text-truncate d-block mt-3">
                      {{emulator_title}}
                     </h3>
                     <span class="small text-primary d-block">
                        <span> {{ fn('getConsoleInfo',current_cpt_type,tag_name)['total_posts'] }} emulators</span>
                        <span class="text-muted">|</span>
                        <span>
                           <svg class="svg-6 svg-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                              <path d="M480 352h-133.5l-45.25 45.25C289.2 409.3 273.1 416 256 416s-33.16-6.656-45.25-18.75L165.5 352H32c-17.67 0-32 14.33-32 32v96c0 17.67 14.33 32 32 32h448c17.67 0 32-14.33 32-32v-96C512 366.3 497.7 352 480 352zM432 456c-13.2 0-24-10.8-24-24c0-13.2 10.8-24 24-24s24 10.8 24 24C456 445.2 445.2 456 432 456zM233.4 374.6C239.6 380.9 247.8 384 256 384s16.38-3.125 22.62-9.375l128-128c12.49-12.5 12.49-32.75 0-45.25c-12.5-12.5-32.76-12.5-45.25 0L288 274.8V32c0-17.67-14.33-32-32-32C238.3 0 224 14.33 224 32v242.8L150.6 201.4c-12.49-12.5-32.75-12.5-45.25 0c-12.49 12.5-12.49 32.75 0 45.25L233.4 374.6z"></path>
                           </svg>
                         {{ fn('getConsoleInfo',current_cpt_type,tag_name)['total_downloads'] }}
                        </span>
                     </span>
                  </a>
               </div>
{% endif %}

            {% endfor %}


            </div>
         </div>
      </section>
   </main>
</div>
